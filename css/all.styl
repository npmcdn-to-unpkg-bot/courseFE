  position: absolute;
  right: 100%;
  top: 7px;
  width: 0;
  height: 0;
  border-top: 13px solid transparent;
  border-right: 15px solid gallery;
  border-bottom: 13px solid transparent;

.rigth-border
  border-right: thick solid shamrock;

/*Go up button section*/
#go-up
  padding: 8px 12px 8px;
  font-size: 15px;
  color: white;
  background: midnight;
  position: fixed;
  bottom: 0;
  right: 0;
  border-radius: 6px 6px 0 0;
  opacity: 0;

#go-up.show
  opacity: 1;

/*Experience table section*/
.experience-table tr td h1{
	font(16px, 19px, 0);
	font-weight: 900;
}
.experience-table
  tr
    td
      vertical-align: top;
      padding: 15px 0 15px 0;
      border-bottom: 1px dashed shamrock;

.experience-table
  tr:last-child
    td
      border-bottom: none;

.experience-table
  tr:first-child
    td
      padding-top: 0;

.experience-table
  tr
    td
	  h1
        margin: 0 50px 0 0;

/*Skills section*/
.skill-button
  color: white;
  padding: 10px 20px;
  background: black;
  border: none;
  border-radius: 6px;

#add-skill
  float: right;
  margin-top: -80px;
  opacity: 0;
  &:hover
    opacity: 1

.add-skill
  border: 1px solid shamrock;
  width: 100%;
  display: inline-block;
  border-radius: 5px;
  display: none;  

.add-skill table{
	width: 100%;
	margin: 15px;
}

.add-skill input[type='text'], input[type='number']{
    color: midnight;
    padding: 7px;
	margin: 10px;
	width: 80%;
	border-radius: 5px;
}

.add-skill input[type='text']:hover, input[type='number']:hover{
	border-color: shamrock;
}
input:focus
  outline: none;

.skill-charts
  width:100%;

.skill-bar
  height: 30px;
  list-style-type: none;
  color: white;
  width: 0%;
  background: shamrock;
  margin: 5px 0 5px 0;
  
  /*Text truncation*/
  white-space: nowrap;      
  overflow: hidden;         
  text-overflow: ellipsis; 

.skill-bar span{
	vertical-align: sub;
	padding-left: 5px;
}

.skill-table
  margin-top: 30px;
  width: 100%;
  border-collapse: collapse;
  font-size: 12px;

.skill-table
  tr:last-child
    td
      padding-top: 10px;


.skill-table tr:first-child td{
	position: relative;
	border: 2px solid grey;
	border-top: none;
	height: 10px;
}
.skill-table
  tr:last-child
    td:last-child
      text-align: right;
	  
.skill-table
  tr:first-child
    td:nth-child(2)
      width: 60%;

.skill-table span{
	margin-left: -25px;
}	

/*Portfolio */
.portfolio-filter
  display: inline;

.grid-item
  border: 1px solid grey;
  height: 200px;
  width: 350px;
  margin: 5px;
  overflow: hidden;
  
.code
  background: url(../images/coder.jpg) no-repeat center center;
  background-size: cover;

.ui
  background: url(../images/designer.jpg) no-repeat center center;
  background-size: cover;

.green
  color: shamrock;

.item-info
  position: absolute;
  width: 346px;
  height: 196px;
  opacity: 0.9;
  top: 300px;
  background: oxford;
  border: 2px solid shamrock;

.item-info div{
	margin: 30px;
}

.item-info h2{
	color: shamrock;
	font-size: 15px;
	font-weight: 900;
}

.item-info span{
	color: white;
	padding: 10px 0 10px 0;
}

/*Contacts*/
.contacts-table
  border-collapse: collapse;

.contacts-table td{
	padding: 10px;
}
.contacts-table tr td:first-child{
	width: 40px;
	color: shamrock;
	font-size: 40px;
}

.contacts-table tr td:last-child{
	font(14px, 1.3em, 0);
	vertical-align: middle;
}

.contacts-table tr td:first-child{
	border-right: 1px solid grey;
	border-bottom: 1px solid grey;
}
.contacts-table tr:last-child td{
	border-bottom: none;
}

/*Feedbacks section*/
.feedback
  margin-bottom: 50px;

.feedback div p:first-child{
	background: grey;
    padding: 15px;
	border-radius: 5px;
}

.feedback div p:last-child {
    margin: -2px 0 0 10px;
    display: inline;
    position: absolute;
}

.feedback-avatar{
	border: 2px solid white;
    border-radius: 50%;
	width: 50px;
	height: 50px;
    margin-top: -25px;
}

/*Mobile layout*/
@media screen and (max-width: 800px) {
  .sidebar-table tr td:last-child{
  	display: none;
  }
  
  #sidebar > div > h1{
  	display: none;
  }
  
  img.sidebar-image{
  	width: 50px;
  	height: 50px;
  	margin: 10px;
  }
  
  #sidebar{
  	width: inherit;
  }
  
  #go-back {
  	background: #26C17E;
  	width: 50px;
  	heigth: 50px;
  	border-radius: 5px;
  	left: 10px;
  }
  
  #go-back > span{
  	display:none;
  }
  
  .content{
      padding-left: 70px;
  }
}