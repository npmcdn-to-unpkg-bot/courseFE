/*Colors*/
raven = #667081
white = #fff
midnight = #000614
shamrock = #26C17E
grey = #bfbfbf
oxford = #222935
gallery = #eeeeee


/*General mixings*/
size(w, h)
  if(h != 0)
    height: h;
  if(w != 0)
    width: w;
	
font(x, y, z)
  if(z != 0)
    font: x/y z, 'Arial', 'Tahoma', sans-serif;
  else
    font: x/y 'open_sansbold', 'Arial', 'Tahoma', sans-serif;

/* Body section*/
body, html
  margin: 0;
  padding: 0;
  height: 100%;

body.index
  background: url(../images/background.jpg) no-repeat center center fixed;
  background-size: cover;
  font(14px, 1.3em, 'open_sansregular');
  color: white;

/*Scrollbar section*/
::-webkit-scrollbar
  width: 10px;

::-webkit-scrollbar-thumb
  border-radius: 6px;
  background-color: raven;

/* Img section*/
img
  size(200px, 200px);
  border: 1px solid white;
  border-radius: 50%;

img.sidebar-image
  size(150px, 150px);
  border: 1px solid white;
  border-radius: 50%;
  margin-top: 5px;

/* Greeting box section */
div.greeting-box
  size(470px, 0);
  display: block;
  text-align: center;
  margin: 0;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%)

h1.greeting-box
  display: block;
  position: static;
  font(45px, 48px, 0);
  font-weight: 700;
  margin: 5px 0 5px 0;

h2.greeting-box
  display: block;
  font(30px, 33px, 0);
  margin: 5px 0 5px 0;

p.greeting-box
  display: block;
  margin: 5px 0 5px 0;

#know-more
  border-radius: 5px;
  padding: 20px 10px;
  font(20px, 5px, 0);
  background-color: midnight;
  display: block;
  margin: 5px 150px 0 150px;
  color: white;
  text-decoration: none;
  &:hover
    background-color: shamrock;

/* Sidebar section */
#sidebar
  top: 0;
  left: 0;
  width: 250px;
  background: oxford;
  height: 100%;
  position: fixed;
  text-align: center;
  color: white;
  float: left;

/*Sidebar table section */
table.sidebar-table
  font(20px, 33px, 0);
  list-style-type: none;
  width: 100%;
  padding: 0;
  text-align: left;
  color: raven;
  tr:hover
    color: white;

table.sidebar-table
  tr
    td
      border-bottom: 1px dashed raven;
      padding: 20px;

table.sidebar-table
  tr:nth-of-type(1)
    td
      border-top: 1px dashed raven;
      padding: 20px;
	  
/*Go back button*/
#go-back
  font(20px, 33px, 0);
  font-weight: 500;
  position: absolute;
  bottom: 10px;
  left: 30%;
  text-decoration: none;
  color: white

/*Hide sidebar section*/
#hide-sidebar
    top: 5px;
    margin-right: -32px;
    right: 0;
    margin-top: 5px;
    position: absolute;
    background: oxford;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 20px;
    padding: 10px;
    box-sizing: border-box;
    &:hover
      color: shamrock;

/*Content section*/
.content
  margin: 40px;
  padding-left: 260px;
  padding-top: 20px;

.headings
  font(25px, 28px, 0);
  font-weight: 900;
  color: shamrock;
  margin: 50px 0 50px 0;

.headings:first-child
  margin-top: 0;

#about-me
    margin-bottom: 40px;

/*Education table section*/
.education-table
  width: 100%;
  border-collapse: separate;
  border-spacing: 0;

.education-table-wrapper
  height: 300px;
  overflow: hidden;
  &:hover  
    overflow-y:scroll;

.education-table
  tbody
    td:nth-child(3)
      width: 90%;
      background: gallery;

.education-table
  tbody
    td:nth-child(3)
      h1
        font(16px, 19px, 0);
        font-weight: 900;
        margin: 0;

.education-table tbody tr:first-child td{
	background: none;
}

.education-table tbody tr:first-child td:first-child {
	border-image: -webkit-linear-gradient(top, white 7%, shamrock 80%) 0 100% 10 1/0 6px 0 0 stretch
}

.education-table tbody tr:last-child td:first-child {
	border-image: -webkit-linear-gradient(bottom, white 7%, shamrock 80%) 0 100% 10 1/0 6px 0 0 stretch
}

/*Spinner section*/
.spinner-wrapper{
	position: relative;
	width:100%;
	height: 300px;
	z-index: 1;
}

.spinner {
  width: 40px;
  height: 40px;
  background-color: shamrock;
  position: absolute;
  left: 50%
  top: 5%;

  margin: 100px auto;
  -webkit-animation: sk-rotateplane 1.2s infinite ease-in-out;
  animation: sk-rotateplane 1.2s infinite ease-in-out;
}

@-webkit-keyframes sk-rotateplane {
  0% { -webkit-transform: perspective(120px) }
  50% { -webkit-transform: perspective(120px) rotateY(180deg) }
  100% { -webkit-transform: perspective(120px) rotateY(180deg)  rotateX(180deg) }
}

@keyframes sk-rotateplane {
  0% { 
    transform: perspective(120px) rotateX(0deg) rotateY(0deg);
    -webkit-transform: perspective(120px) rotateX(0deg) rotateY(0deg) 
  } 50% { 
    transform: perspective(120px) rotateX(-180.1deg) rotateY(0deg);
    -webkit-transform: perspective(120px) rotateX(-180.1deg) rotateY(0deg) 
  } 100% { 
    transform: perspective(120px) rotateX(-180deg) rotateY(-179.9deg);
    -webkit-transform: perspective(120px) rotateX(-180deg) rotateY(-179.9deg);
  }
}

/*End of spinner section*/


.cell-title
  margin: 0;
  padding-bottom: 5px;
  font-size: 20px;

.talk-bubble {
    background: gallery;
    position: relative;
    padding: 16px;
    margin-bottom: 10px;
    border-radius: 5px;
}

td[colspan="2"]
  padding: 0 20px;
  height: 40px;
  text-align: center;

.talk-bubble:before
